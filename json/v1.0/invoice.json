{ "type":"object",
  "title": "line item",
  "description": "A line item for a document",
  "properties":{
    "id":{
      "description": "UUID assigned by SK",
      "identity":true,
      "optional":true,
      "readonly":true,
      "type":"string"
    },
    "number":{
      "description": "Unique number assigned by SK invoice number schema. Auto-assigned when invoice is opened.",
      "optional":true,
      "type":"string"
    },
    "address_field":{
      "description": "Address field with the receiver. Shown in envelope window.",
      "optional":true,
      "type":"string"
    },
    "date":{
      "format":"date",
      "optional":true,
      "type":"string"
    },
    "due_days":{
      "optional":true,
      "type":"integer"
    },
    "due_date":{
      "format":"date",
      "optional":true,
      "type":"string"
    },
    "status":{
      "optional":true,
      "default":"draft","enum":["draft","open","closed"],
      "type":"string"
    },
    "payment_method":{
      "optional":true,
      "enum":["cash","bank_transfer","credit_card","paypal","direct_debit","cheque"],
      "type":"string"
    },
    "title":{
      "optional":true,
      "type":"string"
    },
    "notes_after":{
      "optional":true,
      "type":"string"
    },
    "notes_before":{
      "optional":true,
      "type":"string"
    },
    "client":{
      "optional":true,
      "readonly":true,"type":"object",
      "properties":{"$ref":"./client.json#properties"}
    },
    "client_id":{
      "type":"string"
    },
    "line_items":{
      "optional":true,
      "type":"array",
      "properties":{"$ref":"./address.json#properties"}
    },
    "created_at":{
      "format":"date-time",
      "optional":true,
      "readonly":true,
      "type":"string"
    },
    "updated_at":{
      "format":"date-time",
      "optional":true,
      "readonly":true,
      "type":"string"
    },
    "lock_version":{
      "optional":true,
      "readonly":true,
      "type":"integer"
    },
    "price_total":{
      "optional":true,
      "readonly":true,
      "type":"number"
    },
    "price_tax":{
      "optional":true,
      "readonly":true,
      "type":"number"
    }
  }
}
